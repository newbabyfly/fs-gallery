extends layout

block content
  #main
    include addImageForm.pug

    h2 Recently Added Images |
      a(href="../gallery") All Images
    #recentImages

    each image in images
      ul.list-container
        li
          img(src=`../uploads/${image.file}` alt=`${image.imageData.title}` width="200px")
        li Title:
            a(href=`../gallery/${image._id}`) #{image.imageData.title}
        li Description: #{image.imageData.description}
        li Date: #{image.created_at}
        li
          button.btn.btn-xs.btn-default(type='button' onclick=`handleEditFileClick('${image._id}')`) Edit
          button.btn.btn-xs.btn-default(type='button' onclick=`handleDeleteFileClick(${image.file})`) Delete
